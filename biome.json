{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["./biome-config/formatter.json", "./biome-config/linter.json"],
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "./node_modules",
      ".dockerignore",
      ".gitignore",
      ".DS_Store",
      ".env*.local",
      ".env",
      "./dist",
      "**/*.md",
      "**/*.yml",
      "LICENSE",
      "**/*.json"
    ]
  }
}
